<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layOutSubRecyclerView"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/myItemDetailImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/txtFrTopSellSubViewItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:text="Top Sell"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtFrTopSellSubViewItemCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:paddingLeft="5dp"
        android:text="(brand new)"
        android:textSize="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtFrTopSellSubViewItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:paddingLeft="5dp"
        android:text="NC 5000"
        android:textColor="@color/black"
        android:textStyle="italic" />

</LinearLayout>