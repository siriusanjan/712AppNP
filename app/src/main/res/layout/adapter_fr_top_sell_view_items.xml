<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layOutSubRecyclerView"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:elevation="10dp">
    <ImageView
        android:id="@+id/myItemDetailImage"
        android:layout_width="80dp"
        android:layout_height="67dp"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:transitionName="@string/logoTransitionName"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txtFrTopSellSubViewItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="5dp"
        android:paddingBottom="1dp"
        android:text="Top Sell"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtFrTopSellSubViewItemCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="5dp"
        android:text="(brand new)"
        android:textSize="5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtFrTopSellSubViewItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="2dp"
        android:textSize="12dp"
        android:text="NC 5000"
        android:textColor="@color/black"
        android:textStyle="italic" />

</LinearLayout>